{
  "name": "isomorphic-preact",
  "version": "1.0.0",
  "description": "isomorphic architecture preact example",
  "author": "malbernaz <albernazmiguel@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:dev:client": "webpack --env dev:client",
    "build:dev:server": "webpack --env dev:server",
    "build:dev": "yarn build:dev:client && yarn build:dev:server",
    "build:prod:client": "webpack --env prod:client",
    "build:prod:server": "webpack --env prod:server",
    "build:prod": "yarn cleandist && yarn build:prod:client && yarn build:prod:server",
    "cleandist": "rimraf dist",
    "dev": "yarn build:dev && concurrently --raw --kill-others 'yarn watch:server' 'yarn nodemon' 'yarn watch:client'",
    "nodemon": "nodemon --watch dist --ignore dist/public --exec 'node --inspect' dist",
    "start": "node dist",
    "watch:client": "webpack-dev-server --env dev:client",
    "watch:server": "webpack --env dev:server --watch"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "autoprefixer": "^6.5.3",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-async-to-promises": "^1.0.5",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-babili": "^0.0.9",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "concurrently": "^3.1.0",
    "copy-webpack-plugin": "^4.0.0",
    "css-loader": "0.26.1",
    "cssnano": "3.8.1",
    "eslint": "3.11.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "file-loader": "^0.9.0",
    "image-webpack-loader": "^3.0.0",
    "isomorphic-style-loader": "^1.1.0",
    "json-loader": "^0.5.4",
    "node-sass": "^3.13.0",
    "nodemon": "^1.11.0",
    "postcss-import": "^8.2.0",
    "postcss-loader": "^1.1.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "stylelint": "7.6.0",
    "stylelint-config-css-modules": "^0.1.0",
    "stylelint-config-standard": "15.0.0",
    "stylelint-webpack-plugin": "^0.4.0",
    "url-loader": "^0.5.7",
    "webpack": "2.1.0-beta.27",
    "webpack-dev-server": "2.1.0-beta.11"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "history": "4.4.1",
    "normalize.css": "^5.0.0",
    "preact": "7.1.0",
    "preact-render-to-string": "3.3.0",
    "serve-favicon": "^2.3.0",
    "serve-static": "^1.11.1",
    "universal-router": "^2.0.0"
  }
}
